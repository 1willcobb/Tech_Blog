<section class="card glassy">
    {{#unless is_editing}}
        <div class="card_header">
            <h4>{{title}}</h4>
            <h6>posted by {{user.username}} on {{format_date createdAt}}</h6>
        </div>
        <div class="card_body">
            {{ text }}
    {{else}}
        <div class="card_header">
            <input class="form-input" type="text" id="new_blog_title" value={{text}} />
        </div>
        <div>
            <textarea class="glassy_textblock" rows="10" type="textarea" id="new_blog_content">{{ text }}</textarea>
        </div>
    {{/unless}}
    </div>
    <div style="display: flex; justify-content: space-between;">
        <div>
            <button class="comment-button join_button nav_button" data-action="comment" data-id="{{id}}">Comment</button>
        </div>

        {{#if isOwner}}
        <div style="display: flex; gap:5px;">
            {{#unless is_editing}}
                <button class="edit_button join_button nav_button" data-action="edit" data-id="{{id}}">Edit</button>
                <button class="delete-button join_button nav_button" data-action="delete" data-id="{{id}}">Delete</button>
            {{else}}
                <button class="save_button join_button nav_button" data-action="save" data-id="{{id}}">Save</button>
                <button class="cancel_button join_button nav_button" data-action="cancel" data-id="{{id}}">Cancel</button>
            {{/unless}}
        </div>
        {{/if}}
    </div>
</section>
